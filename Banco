#creating bank

create database bakery;

use bakery;

create table tb_usuario(
id int not null auto_increment,
nome varchar(255),
email varchar(255),
endereco varchar(255),
telefone varchar(255),
senha varchar(255),
estado varchar(255),
PRIMARY KEY(id)
)ENGINE = innodb;

create table tb_cliente(
id int not null auto_increment,
nome varchar(255),
email varchar(255),
cnpj varchar(255),
endereco varchar(255),
telefone varchar(255),
senha varchar(255),
estado varchar(255),
PRIMARY KEY(id)
)ENGINE = innodb;

create table tb_produtos(
id int not null auto_increment,
nome varchar(255),
preco double,
PRIMARY KEY(id)
)ENGINE = innodb;
